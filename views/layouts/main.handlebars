                        <a href="/about">
                        <li>
                            ABOUT
                        </li>
                        </a>
                 </ul>
             </nav>
         </div>
        <div class="wrap">
            <div style="color: white;">Number of page loads:
                <span id="CounterVisitor"></span>
            </div>
            <div id="fb-root"></div>
            <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v9.0" nonce="FCW9jKpj"></script>
        {{{body}}}
        </div>
        </div>
        <script>
        var n = localStorage.getItem('on_load_counter');

        if (n === null) {
            n = 0;
        }
        n++;

        localStorage.setItem("on_load_counter", n);

        nums = n.toString().split('').map(Number);
        document.getElementById('CounterVisitor').innerHTML = '';
        for (var i of nums) {
            document.getElementById('CounterVisitor').innerHTML += '<span class="counter-item" style="color: white;">' + i + '</span>';
        }

    </script>
    </body>
</html>